		http://www.springframework.org/schema/aop/spring-aop.xsd">

	<!-- ======================================================================== -->
	<!-- Spring bootstrap config, only use this file in code should be sufficient -->
	<!-- ======================================================================== -->
	<context:component-scan base-package="com.yy"></context:component-scan>
	<aop:aspectj-autoproxy></aop:aspectj-autoproxy>
	<context:property-placeholder/>
	<bean id = "initMethodDemo" class = "com.yy.di.dao.impl.InitMethodDemoImpl" >
		<property name="user" ref="user"></property>
	</bean>
	<bean id = "user" class="com.yy.di.bean.User">
		<property name="name" value="JosonLiu"></property>
		<property name="age" value="27"></property>
	</bean>
	<bean id = "propertyDi" class="com.yy.di.service.impl.PropertyDiImpl" >
		<property name = "title" value = "Test title."></property>
		<property name = "artist" value = "JosonLiu"></property>
		<property name = "tracks" >
			<list>
				<value>first track.</value>
				<value>second track.</value>
				<value>third track.</value>
			</list>
		</property>
	</bean>
	<!-- 初始化AOP Bean -->
